@page
@model DissertationProject.Pages.Quizzes.AchievementsModel
@{
    ViewData["Title"] = "Your Achievements";
}

<h2>Your Achievements</h2>

@if (Model.UserAchievements != null && Model.UserAchievements.Count > 0)
{
    <div class="alert alert-info">
        <strong>Congratulations! You've unlocked the following achievements:</strong>
    </div>

    <!-- Achievement Cards -->
    <div class="row">
        @foreach (var achievement in Model.UserAchievements)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg border-light">
                    <div class="card-body text-center">
                        <!-- Display Badge Image -->
                        <img src="~/img/medal.png" alt="Medal" class="img-fluid mb-3" style="max-width: 100px; height: auto;" />
                        <h5 class="card-title">@achievement.Badge</h5>
                        <p class="text-muted">@achievement.DateAchieved.ToString("MMMM dd, yyyy")</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center">You have not earned any achievements yet. Keep going to unlock your first achievement!</p>
}

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success">
        @Model.Message
    </div>
}
