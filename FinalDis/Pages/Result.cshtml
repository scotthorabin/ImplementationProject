@page
@using DissertationProject.Models
@model DissertationProject.Pages.ResultModel

@{
    ViewData["Title"] = "Quiz Results";
}

<h1>Quiz Results</h1>

<!-- Display the result message stored in TempData -->
<p>@Model.Message</p>

<h2>Your Achievements</h2>

@if (Model.UserAchievements != null && Model.UserAchievements.Any())
{
    <ul>
        @foreach (var achievement in Model.UserAchievements)
        {
            <li>
                @achievement.Badge (Achieved on @achievement.DateAchieved.ToString("MMMM dd, yyyy"))
            </li>
        }
    </ul>
}
else
{
    <p>You have not earned any badges yet.</p>
}

<a href="@Url.Page("/Index")" class="btn btn-primary">Back to Quizzes</a>
